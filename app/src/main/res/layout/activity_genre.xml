<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/grdnt">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/HeaderBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:columnCount="2"
            android:rowCount="5">

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:isScrollContainer="true"
                android:src="@drawable/avengers"></ImageView>

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:isScrollContainer="true"
                android:src="@drawable/ibytes"></ImageView>

            <ImageView
                android:id="@+id/ImageView03"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/ImageView04"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/ImageView05"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:isScrollContainer="true"
                android:src="@drawable/avengers"></ImageView>

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:isScrollContainer="true"
                android:src="@drawable/ibytes"></ImageView>
            <ImageView
                android:id="@+id/ImageView08"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>
            <ImageView
                android:id="@+id/ImageView09"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>
            <ImageView
                android:id="@+id/ImageView10"
                android:src="@drawable/ibytes"
                android:isScrollContainer="true"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:adjustViewBounds="true">
            </ImageView>

        </GridLayout>
    </ScrollView>


</LinearLayout>